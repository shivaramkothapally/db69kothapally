extends layout

block content
  h1= title
  - let watch=results
  div(class="container-fluid")
  div(class="row m-1")
    each wat,index in watch
     - let destination = `dispatch(\"/resource/update?id=${watch ._id}\")`
     - let destinationdelete = `dispatchDelete(\"/resource/delete?id=${watch._id}\")`
     - let destinationcreate = `dispatchCreate(\"/resource/create\")`
      div(class="col-sm-2 " onclick=`buy(${index})`)  #{wat.Name} - #{wat.Company} - #{wat.Price} 
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-primary " class="m-1" class="btn-toolbar", onclick= destinationcreate) Create
        button.btn( class="btn-danger" class="m-1" class="btn-toolbar", onclick= destinationdelete) Delete
  script.
      function dispatch(path){
      window.location.href=path
      }
      function dispatchDelete(path){
      window.location.href=path
      }    
      function dispatchCreate(path){
      window.location.href=path
      }      